<!doctype html>
<html lang="en">

<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Pinterest</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <link rel="stylesheet" href="/stylesheets/profile.css">
    <link href="https://cdn.jsdelivr.net/npm/remixicon@4.2.0/fonts/remixicon.css" rel="stylesheet" />
</head>

<body>


    <div class="containerper">

        <nav>
            <span>Pinterest</span>
            <div>
                <a href="/">Home</a>
                <a href="/feed">Feed</a>
               <a href="/logout" class="logout">Logout</a>  
            </div>
        </nav>



        <form id="upload-profile" method="post" enctype="multipart/form-data" hidden action="/profileUpload">
            <input type="file" name="image">
        </form>
        <div class="cardper">
            <div id="profile-picture" class="profile-picture">
                <img src="/images/uploads/<%= user.dp %>" alt="Profile Picture">
            </div>
            <h2 class="name">
                <%= user.fullname %>
            </h2>
            <h3 class="username">@<%= user.username %>
            </h3>
            <!-- <p class="tagline">Discription</p> -->
            <!-- <p class="description">Lorem ipsum dolor sit amet consectetur adipisicing.</p> -->
            <!-- <a href="/logout" class="button">Logout</a> -->

            
            <form action="/upload" method="post" enctype="multipart/form-data">
                <input type="file" name="file" />
                <input type="text" required name="postTxt" placeholder="some caption" />
                <input type="submit" value="submit" />
            </form>

        </div>
    </div>



    <div class="container flex">
        <% user.posts.forEach(function(post) { %>

            <div class="card" style="width: 18rem;">
                <img src="/images/uploads/<%= post.image %>" class="card-img-top" alt="...">

                <div class="card-body">

                    <h5 class="card-title">
                        <%= post.postTxt %>
                    </h5>
                </div>
            </div>
            <% }) %>
    </div>



    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz"
        crossorigin="anonymous"></script>
    <script
        src="https://cdn.tailwindcss.com?plugins=forms,typography,aspect-ratio,line-clamp,container-queries"></script>
    <script>
        document.querySelector("#profile-picture").addEventListener("click", function () {
            document.querySelector("#upload-profile input").click();
        });

        document.querySelector("#upload-profile input").addEventListener("change", function () {
            document.querySelector("#upload-profile").submit();
        });
    </script>

    </head>
</body>

</html>